{% macro pagination(pagination, endpoint, url_args) %}

<div class="pagination">
    {% if pagination.items|length >= 1 %}
    <div class="pages">
        {% if pagination.page > 1 %}
            <a href="{{ url_for(endpoint, page = pagination.page - 1, **url_args) }}"><<</a>
        {% else %}
            <span><<</span>
        {% endif %}

        {% for page in pagination.iter_pages() %}
            {% if page %}
                {% if page != pagination.page %}
                <a href="{{ url_for(endpoint, page = page, **url_args) }}">{{ page }}</a>
                {% else %}
                <strong>{{ page }}</strong>
                {% endif %}
            {% else %}
                <span class="ellipsis">â€¦</span>
            {% endif %}
        {% endfor %}

        {% if pagination.page < pagination.pages %}
            <a href="{{ url_for(endpoint, page = pagination.page + 1, **url_args) }}">>></a>
        {% else %}
            <span>>></span>
        {% endif %}
    </div>

    {% else %}
    No results...
    {% endif %}

    <div class="page-items small description">
        {{ pagination.first }} - {{ pagination.last }} sur {{ pagination.total }}
    </div>
</div>

{% endmacro %}