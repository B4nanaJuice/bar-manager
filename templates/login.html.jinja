{% extends "base.html" %}

{% block content %}
    <h4>{{ page_title }}</h4>

    <form action="{{ url_for('auth.login') }}" method="post">
        <input type="text" name="username" placeholder="Username" required>
        <input type="password" name="password" placeholder="Password" required>
        <input type="submit" value="Auth">
    </form>
{% endblock %}